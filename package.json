{
  "name": "vite-plugin-deploy-copy",
  "version": "1.0.0",
  "description": "A Vite plugin to copy build output to a specific destination with safety checks.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "release": "release-it"
  },
  "keywords": [
    "vite",
    "plugin",
    "copy",
    "deploy",
    "typescript"
  ],
  "author": "Antigravity",
  "license": "ISC",
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "release-it": "^17.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0"
  }
}